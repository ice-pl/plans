	    function refresh(address, connection, replace, position)
	    {
	        $.ajax({
	            type: connection,
	            url: address,
	            data: '',
	            cache: false,
	            async: true,
	            success: function(data){
	                $(replace).html(data);
					if (sessionStorage.scrollLeft != "undefined" || sessionStorage.scrollTop != "undefined" ) {
						$(position).scrollLeft(sessionStorage.scrollLeft);
						$(position).scrollTop(sessionStorage.scrollTop);
					}
	            },
	            error: function(){},
	            complete: function(){}
	        });
	    }


