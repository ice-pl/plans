    {# <link href="{{ asset('css/bootswatch.css') }}" rel="stylesheet"> #}


    <style>

        #sample_items{
            display: flex;
            flex-direction: column;
        }



        #sample_items-title{
            /*background: white;*/
            /*min-height: 300px;*/
            display: flex;
            float: left;
        }



        #sample_items-title > h2:nth-child(1){
            background: #dd00dd30;

        }
        #sample_items-title > h2:nth-child(2){
            background: #dddd0060;
        }
        #sample_items-title > h2:nth-child(3){
            background: #00dddd60;
        }



        #sample_items-title > h2{
            border-radius: 5px;
            color: #fff;
            margin: 0px 5px 5px 5px;
            padding: 0px 0px 0px 0px;
            display: flex;
            align-items: center;
            justify-content: center;
            clear:both;
            min-width: 150px;
            max-width: 150px;
        }



        #sample_items-content{
            background: white;
            min-height: 393px;
            display: flex;
            float: left;
        }





        #sample_items-sortable-1{
            background: #dd00dd20;
            overflow-x: hidden;
        }
        #sample_items-sortable-2{
            background: #dddd0040;
            overflow-x: hidden;
        }
        #sample_items-sortable-3{
            background: #00dddd40;
            overflow-x: hidden;
        }


        ul::-webkit-scrollbar {
            width: 3px;
        }
        ul::-webkit-scrollbar-thumb {
            background: inherit;
            border: 25vh solid transparent;
            background-clip: content-box;
        }
        ul::-webkit-scrollbar-track {
          border-radius: 5px;
        }








         #sample_items-sortable-1, #sample_items-sortable-2, #sample_items-sortable-3{ 
            list-style-type: none;
            margin: 0px 5px 0px 5px;
            padding: 0;
            width: 10%;
            border-radius: 5px;
            min-width: 150px;
            max-width: 150px;
        }



        #sample_items-content>*>*{
            background: inherit;
        }


        #sample_items-content>*>*>a{
            background: inherit;
            margin-left: auto;
            margin-right: 0;
            border-radius: 18px;
            padding: 5px 5px 5px 5px;
        }


        #sample_items-content>*>*>a>button{
            background: inherit;
            border-radius: 13px;
            text-decoration: none;
            color:white;
            border: none;
            outline:none;
            min-width: 25px;
        }





        #sample_items-content > #sample_items-sortable-1 > .default{
            color: rgba(170, 0, 170, 0.6);
        }
        #sample_items-content > #sample_items-sortable-2 > .default{
            color: rgba(170, 170, 0, 0.8);
        }
        #sample_items-content > #sample_items-sortable-3 > .default{
            color: rgba(0, 170, 170, 0.8);
        }

        #sample_items-content>*>.default{
            border-width: 3px;
            border-radius: 5px;
            border-color: red;
            margin: 3px 5px 3px 5px; 
            min-height: 30px;
            font-weight: 600;
            display: flex;
            align-items: center;
            padding: 0px 5px 0px 5px;
            font-family: "Lucida Console", Monaco, monospace;
        }


        .item_name_t {
            white-space: nowrap;
            position: relative;
            overflow: hidden;   
            text-overflow: ellipsis;
            display: block;
            width: 100%;
            top: 3px;
        }
        .item_name_s {
          display: inline-block;
          width: 100%;
        }
        .item_name_t:hover, .item_name_s:hover {
          width: auto;
        }
        .item_name_s:hover .item_name_t { 
          animation: scroll 6s;
        }
        .item_name_f {
          width: 100px;
          overflow: hidden;
        }
        @keyframes scroll {
            0% {left: 0px;}
            100% {left: -100%;}                   
        }






        #together{
            display: flex;
            float: left;
            width: 100%;
            /*width: calc( 100% - 300px );*/

            padding: 50px 50px 0px 50px;
        }


        #together > #info{
            display: flex;
            flex-direction: column;
            padding: 0px 5px 0px 5px;
        }

        #together > #info > *{
            width: 450px;
            height: 254px;
            border: 0px;
            border-radius: 5px;

        }

        #together > #info > #descriptions{
            resize: none;
            flex: 1;
            /*width: calc( 100% - 60px );*/
            /*height: 30px;*/
            pointer-events: none;

            -moz-appearance: textfield-multiline;
            -webkit-appearance: textarea;
            border: 1px solid #e8e8e8;
            font: medium -moz-fixed;
            font: -webkit-small-control;
            overflow: auto;
            /*padding: 2px;*/
            margin: 5px 0px 0px 0px;
            padding: 15px 15px 15px 15px;
            border-radius: 5px;
            resize: none;
            /*resize: both;*/
        }

        #conversation{
            display: flex;
            flex: 1;
            width:250px;
            margin-right: 0;
            flex-direction: column;
        }
        #conversation > #sample_items-menu{
            overflow-x: scroll;
            white-space: nowrap;
            height: 55px;
        }
        #conversation > #sample_items-menu > ul{
            padding: 0px 0px 0px 0px;
        }
        #conversation > #sample_items-menu > ul > li{
            display: inline-block;
        }
        #conversation > #sample_items-menu::-webkit-scrollbar {
            height: 15px;
        }
        #conversation > #sample_items-menu::-webkit-scrollbar-thumb {
          background: #EB6864;
          border-radius: 3px;
        }
        #conversation > #sample_items-menu::-webkit-scrollbar-thumb:hover {
          background: #E74742; 
        }
        #conversation > #sample_items-menu::-webkit-scrollbar-track {
          border-radius: 5px;
        }


        #conversation > #conversation-content > #inner_conversation{
            display: flex;
            flex-direction: column;
            min-height: 285px;
            max-height: 285px;
        }

        #conversation > #conversation-content > #inner_conversation > #conversation-list {
            padding: 0px 0px 0px 0px;
            min-height: 245px;
            max-height: 245px;
            overflow-y: scroll;
            margin: 0px 0px 0px 0px;
            border: solid 1px lightgrey;
            border-radius: 5px;

        }
        
        #conversation > #conversation-content > #inner_conversation > #conversation-list > li{
            /*list-style-type: none;*/
            padding: 5px 5px 5px 15px;
            /*word-break: break-all;*/
            word-break: break-word;
        }

        #conversation > #conversation-content > #inner_conversation > #conversation-list > * >#username{
            font-weight: 600;
            margin: 0px 0px 0px -5px;
        }

        #conversation > #conversation-content > #inner_conversation > #conversation-list > li > a{
            border-radius: 10px;
            padding: 5px 6px 10px 6px;
            position:relative;
            top: -3px;
            line-height: 2px;
        }



        #conversation > #conversation-content > #inner_conversation > form[name="form"]{
            margin-top:auto;
            margin-bottom: 0;
        }
        #conversation > #conversation-content > #inner_conversation > form[name="form"] > #form > * > label[for="form_content"]{
            display:none;
        }



        #conversation > #conversation-content > #inner_conversation > form[name="form"] > #form > * > #form_content{
            border: solid 1px lightgrey;
        }

        #conversation > #conversation-content > #inner_conversation > form[name="form"] > #form > * > #form_save {
            display:none;
        }




        #conversation > #conversation-content > #inner_conversation > #conversation-list::-webkit-scrollbar {
            width: 15px;
        }
        #conversation > #conversation-content > #inner_conversation > #conversation-list::-webkit-scrollbar-thumb {
          background: #EB6864;
          border-radius: 3px;
        }
        #conversation > #conversation-content > #inner_conversation > #conversation-list::-webkit-scrollbar-thumb:hover {
          background: #E74742; 
        }
        #conversation > #conversation-content > #inner_conversation > #conversation-list::-webkit-scrollbar-track {
          border-radius: 5px;
        }






        #sample_items-content>*>.default{cursor: move;}
        #sample_items-content>*>h2{cursor: default;}
        #sample_items-content>*>*>a>button{cursor: pointer;}

    </style>
{% endblock %}



