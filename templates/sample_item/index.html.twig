    function refreshItemDescription(urlForItemDescription)
    {
        $.ajax({
            type: "GET",
            url: urlForItemDescription.value,
            data: '',
            cache: false,
            success: function(data){
                $('#inner_description').html('<b><ins>'+data['name']+'</ins></b>'+'<br>'+'<br>');
                $('#inner_description').append(data['description']);
            },
            error: function(){},
            complete: function(){}
        });
    }



        function refreshConversation(urlForConversation)
    {
        $.ajax({
            type: "GET",
            url: urlForConversation.value,
            data: '',
            cache: false,
            success: function(data){
                $('#inner_conversation').html(data);
            },
            error: function(){},
